{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "strictFunctionTypes": false,
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "lib": ["ES2021", "dom"],
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@convex/*": ["./_generated/*", "../shared/*"]
    }
  },
  "include": ["./**/*", "../lib/**/*", "../shared/**/*"],
  "exclude": ["./_generated"]
}
